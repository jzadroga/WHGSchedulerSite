@model WHGSchedulerSite.Models.LoginBindingModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_ControlPanelLayout.cshtml";
}

<div class="row center-block">
    <div class="col-md-12">
        <br />
        <br />
        <div class="panel panel-primary">
            <div class="panel-heading">Login to ControlPanel</div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", id = "loginForm", role = "form" }))
                {
                    <div class="form-group">
                        <label class="control-label col-md-4" for="username">Username</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "username" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4" for="password">Password</label>
                        <div class="col-md-3">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "password" })
                        </div>
                    </div>

                    @Html.ValidationSummary(false)

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-4">
                            <button type="submit" class="btn btn-primary" id="submitBtn">Login</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



